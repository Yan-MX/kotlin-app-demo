<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/airplane"
        />

    <TextView
        android:id="@+id/title1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animation"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:includeFontPadding="false"
        android:text="Welcome to Flynerd!"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Appdescription"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:ems="10"
        android:gravity="start|top"
        android:layout_centerHorizontal="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quis dui molestie tempus, est cursus pellentesque etiam. Venenatis leo."
        android:inputType="textMultiLine"
        android:layout_below="@+id/title1"/>


</RelativeLayout>